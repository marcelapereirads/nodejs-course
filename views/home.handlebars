<div class="container">
    <div class="task__header">
        <h1>To Do List</h1>
        <a class="waves-effect waves-light btn-large" href="/new">            
            <i class="material-icons right">add</i>New
        </a>
    </div>
    <form>
        {{#each posts}}
            <div class="card">
                <div class="card-content">
                    <label class="task__name">
                        <input type="checkbox" class="filled-in" {{#if dataValues.done}}checked{{/if}}/>
                        <span>{{dataValues.name}}</span>
                    </label>
                    <p>{{dataValues.description}}</p>
                </div>
            </div>
        {{/each}}
    </form>
</div>
